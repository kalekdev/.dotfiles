[user]
	name = kalek
	email = hello@kalek.dev
[core]
	editor = nvim
[push]
	autoSetupRemote = true
[init]
	defaultBranch = main
[pull]
	ff = only
[diff]
	tool = nvimdiff
[difftool]
	prompt = false
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[alias]
	d = difftool
	s = status
	a = add
	c = commit
	ch = checkout
	pl = pull
	ps = push
